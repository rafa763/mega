<form class="form" action="" method="post">
  <h1> Create account</h1>
<h2 style="color: red;">{{message}}</h2>
  <div class="field">
    <input class="f_input" type="text" name="username" id="username" required />
    <label class="f_label" for="username">Username</label>
  </div>

  <div class="field">
    <input class="f_input" type="text" name="email" id="email" required />
    <label class="f_label" for="email">Email</label>
  </div>

  <div class="field">
    <input class="f_input" type="password" name="password" id="password" required />
    <label class="f_label" for="password">Password</label>
  </div>

  <button type="submit">Sign up</button>
  <h2>Already have an account? <span><a href="login">Sign in</a></span></h2>
</form>
